@model MainViewModel


<div align="center">

    <h3>Create Task</h3>



    <form asp-controller="Main" asp-action="CreateTask" method="post" class="form-horizontal" enctype="multipart/form-data">


        <div class="form-group">
            <label asp-for="Task.TaskName"></label>
            <div class="col-md-5">
                <input asp-for="Task.TaskName" class="form-control" />
                <span asp-validation-for="Task.TaskName" class="text-danger"></span>
            </div>
        </div>


        

        <br />
        <div>
            <label>File Comment</label>
            <br />
            <input asp-for="CommentFile" type="file" />
        </div>
        <br />
        <div>
            <label>Text Comment</label>
            <br />
            <textarea rows="10" cols="45" asp-for="CommentText"> </textarea>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="Task.StartDate"></label>
            <div class="col-md-5">
                <input asp-for="Task.StartDate" class="form-control" />
                <span asp-validation-for="Task.StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Task.CancelDate"></label>
            <div class="col-md-5">
                <input asp-for="Task.CancelDate" class="form-control" />
                <span asp-validation-for="Task.CancelDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-5">
                <label> Название проекта</label> <br />
                @*<input id="Project" name="Project" />*@
                <input asp-for="Project.ProjectName" />
            </div>
        </div>
        <br />

        <input class="btn btn-success" type="submit" value="Создать заказ" />
    </form>
</div>

